<script>
    window.addEventListener("mouseover", function(e) {
        let navItems = document.getElementsByClassName("nav-item");
        
        if(document.getElementsByClassName("header-nav")[0].contains(e.target)) {
            let navItem = e.target.closest(".nav-item"); 
            
            if(!navItem || navItem.classList.contains("nav-item-active")) return;
        
            for(let i = 0; i < navItems.length; i++) {
                if(navItems[i]) navItems[i].classList.remove("nav-item-active");
            }

            return navItem.classList.add("nav-item-active");
        }

        for(let i = 0; i < navItems.length; i++) {
            if(navItems[i]) navItems[i].classList.remove("nav-item-active");
        }
    });
</script>