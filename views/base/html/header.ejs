    <div class="header-flexbox">
        <a class="header-search" href="/search">
            <div class="header-search-icon-container js-enter" tabindex="1">
                <div class="header-search-icon"></div>
            </div>
        </a>
        <% if (user.id) { %>
            <div class="header-user">
                <div class="header-user-icon" style="background-image: url('https://<%= config.domains.avatar %>/<%= user.id %>');" tabindex="1"></div>
                <div class="header-user-dropdown">
                    <a class="header-user-account" href="/account">
                        <img class="header-user-account-icon" src="/public/media/images/account.svg" alt>
                        <span class="header-user-account-name"><%= user.name %></span>
                    </a>
                    <a href="/account/settings">settings</a>
                    <% if(user.priv & (1 << 13)) { %>
                        <a href="/admin">admin</a>
                    <% } %>
                    <a href="/account/logout">logout</a>
                </div>
            </div>
        <% } else { %>
            <a href="/account/login">
                <div class="header-user-icon guest-icon js-enter" tabindex="1"></div>
            </a>
        <% } %>
        <div class="header-dropdown js-enter" tabindex="1"><span>â˜°</span></div>
        <%- include("../js/headerDropdown") %>
    </div>
</div>