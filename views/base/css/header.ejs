<style>
    /* 
    # HEADER CONTAINER
    */
    header {
        height: var(--header-height);
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--primary);    
    }
    .header-container {
        height: 100%;
        min-width: 980px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }
    .header-flexbox {
        display: flex;
        flex-direction: row;
        align-items: center;
    }
    /* 
    # HEADER ICONS
    */
    .header-icon div, .header-user-icon {
        background-size: contain;
        background-repeat: no-repeat;
        height: 3.5rem;
        width: 3.5rem;
    }
    .header-icon div {
        background-image: url("/public/media/images/icon.png");
        transition: filter 0.2s ease-in-out;
    }
    .header-icon {
        width: 3.5rem;
        height: 3.5rem;
        margin-left: 1rem;
    }
    .header-icon:hover div, .header-icon:focus div{
        outline: none;
        filter: opacity(var(--hover-opacity))
    }
    /* 
    # NAV BAR
    */
    nav {
        display: flex;
        align-items: center;
    }
    .nav-drop:hover .nav-item:not(.nav-item-active) {
        opacity: 0.8;
    }
    .nav-drop:hover .nav-item-active {
        opacity: 1;
        color: var(--text);
    }
    .nav-item {
        cursor: pointer;
        position: relative;
        font-weight: 600;
        font-size: 1.1rem;
        margin: 0rem 0.6rem;
        color: var(--text);
        transition: opacity 0.2s ease;
    }
    .nav-selected {
        box-shadow: 0 0.1em var(--text);
    }
    .nav-selected:hover, .nav-selected:focus {
        box-shadow: 0 0.1em var(--text-hover);
    }
    .nav-item:hover, .nav-item:focus  {
        outline: none;
        color: var(--text-hover);
    }
    /* 
    # HEADER SEARCH
    */
    .header-search {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: 15rem;
        margin: 1rem;
    }
    .header-search-icon-container {
        margin-left: auto;
        box-shadow: 0px 0px 0px 0.2rem var(--primary-border);
        border-radius: 1rem;
        width: 3rem;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: box-shadow 0.3s ease-in-out, background-color 0.3s ease-in-out;
    }
    .header-search-icon-container:hover,
    .header-search-icon-container:focus {
        box-shadow: 0px 0px 0px 0.2rem var(--text);
        cursor: pointer;
        outline: none;
        background-color: var(--text);
    }
    .header-search-icon {
        margin: 0.1rem;
        margin-right: 0.4rem;
        background-image: url("/public/media/images/search.svg");
        background-size: contain;
        background-repeat: no-repeat;
        height: 1.5rem;
        width: 1.5rem;
        transition: background-image 0.3s ease-in-out;
    }
    .header-search-icon-container:hover .header-search-icon,
    .header-search-icon-container:focus .header-search-icon  {
        background-image: url("/public/media/images/hover-search.svg");
    }
    /* 
    # HEADER USER
    */
    .header-user-icon:hover,
    .header-user-icon:focus,
    .header-dropdown:hover,
    .header-dropdown-selected .header-dropdown,
    .header-dropdown:focus:not(.header-dropdown-selected .header-dropdown)  {
        box-shadow: 0px 0px 0px 0.2rem var(--text);
        cursor: pointer;
        outline: none;
        color: var(--primary);
        background-color: var(--text);
    }
    .header-user-icon, .nav-user-icon {
        transition: box-shadow 0.3s ease-in-out, background-color 0.3s ease-in-out;
        box-shadow: 0px 0px 0px 0.2rem var(--primary-border);
        border-radius: 100%;
        margin-right: 1rem;
        background-image: url("https://a.sutekina.tk/0")
    }
    /* 
    # HEADER DROPDOWN
    */
    .header-dropdown {
        display: none;
    }
    /*
    # NOT MOBILE
    */
    @media(min-width: 1000px) {
        .nav-item-active div {
            opacity: 1;
        }
        nav {
            height: 100%;
        }
        .nav-user {
            display: none;
        }
    }
    /* 
    # MOBILE
    */
    @media(max-width: 999px) {
        /* 
        # NAV DROPDOWN
        */

        nav {
            display: flex;
            z-index: -1;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            top: -5rem;
            background: var(--primary-bg);
            flex-direction: column;
            align-items: flex-start;
            position: absolute;
            width: 100%;
            transition: top 0.2s ease-in-out;
        }
        .nav-drop {
            padding: 1rem;
            padding-top: 0.5rem;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        .nav-user {
            display: inline-flex;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            align-items: center;
            height: 3rem;
            width: 100%;
            background-color: #000;
            padding-left: 0.5rem;
        }
        .nav-user-icon {
            margin-right: 0.5rem;
            height: 2rem;
            width: 2rem;
            background-size: cover;
            box-shadow: none;
        }
        .nav-user span {
            color: var(--text);
        }

        .nav-item {
            -webkit-user-select: none;       
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            position: relative;
            width: 100%;
            cursor: pointer;
            text-align: left;
            padding: 0px;
            background: var(--primary-bg);
            border: none;
        }
        .nav-item::before {
            --pseudo-size: 0.4rem; 
            --negative-pseudo-size: -0.4rem;
            content: '';
            position: absolute;
            display: inline-block;
            left: calc(var(--negative-pseudo-size) * 2.5);
            top: 50%;
            margin-top: calc(var(--negative-pseudo-size) / 2);
            width: var(--pseudo-size);
            height: var(--pseudo-size);
            border-left: 3px solid;
            border-bottom: 3px solid;
            transform: rotate(225deg) scaleY(1);
        }

        .nav-selected, .nav-selected:hover, .nav-selected:focus, nav a:focus {
            box-shadow: none;
        }
        /* 
        # SEARCH
        */
        .header-search {
            width: auto;
        }
        /* 
        # DROPDOWN BUTTON
        */
        .header-dropdown {
            -webkit-user-select: none;       
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            box-shadow: 0px 0px 0px 0.2rem var(--primary-border);
            border-radius: 100%;
            color: var(--text);
            font-size: 2rem;
            min-height: 3.5rem;
            min-width: 3.5rem;
            transition: box-shadow 0.3s ease-in-out, color 0.3s ease-in-out;
        }
        .header-dropdown span {
            position: relative;
            top: -2px;
        }
        /* 
        # DIMMING FOR DROPDOWN
        */
/*body*/.header-dropdown-selected {
            background: #2a273a;
        }
/*nav*/ .header-dropdown-selected nav {
            top: calc(var(--header-height));
        }
        .header-dropdown-selected > *:not(header) {
            filter: brightness(var(--hover-opacity));
        }
/* transitions */
        .main-container, footer {
            transition: filter 0.2s ease-in-out;
        }
        body {
            transition: background-color 0.2s ease-in-out;
        }
        .header-user-icon {
            display: none;
        }
        .header-container {
            min-width: 100%;
        }
    }
</style>